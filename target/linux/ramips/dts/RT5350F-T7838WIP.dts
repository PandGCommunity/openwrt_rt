/dts-v1/;

#include "rt5350.dtsi"

/ {
    compatible = "vstarcam,rt5350f-t7838wip", "ralink,rt5350-soc";
    model = "Vstarcam T7838WIP";

    aliases {
        serial0 = &uartlite;
        serial1 = &uart;
    };
};


&spi0 {
    status = "okay";

    m25p80@0 {
        #address-cells = <1>;
        #size-cells = <1>;
        compatible = "jedec,spi-nor";
        reg = <0>;
        spi-max-frequency = <10000000>;

        partition@0 {
            label = "u-boot";
            reg = <0x0 0x30000>;
            read-only;
        };

        partition@30000 {
            label = "u-boot-env";
            reg = <0x30000 0x10000>;
            read-only;
        };

        factory: partition@40000 {
            label = "factory";
            reg = <0x40000 0x10000>;
            read-only;
        };

        partition@50000 {
            label = "firmware";
            reg = <0x50000 0x7b0000>;
        };
    };
};

&gpio1 {
    status = "okay";
};

&pinctrl {
    state_default: pinctrl0 {
        gpio {
            ralink,group = "led";
            // ralink,group = "i2c", "led";
            // ralink,group = "jtag", "led";
            ralink,function = "gpio";
        };
        // refclk {
        //     ralink,group = "refclk";
        //     ralink,function = "refclk";
        // };
    };
};

// &pcm {
//     status = "okay";
// };

&ethernet {
    mtd-mac-address = <&factory 0x4>;
};

&esw {
    mediatek,portmap = <0x2f>;
    mediatek,led_polarity = <0x17>;
};

&wmac {
    ralink,mtd-eeprom = <&factory 0>;
    ralink,led-polarity = <1>;
};

&ehci {
    status = "okay";
};

&ohci {
    status = "okay";
};

&i2c {
    status = "okay";

    htu: htu21@40 {
        compatible = "htu21";
        reg = <0x40>;
    };

    wm8988: wm8988@1b {
        compatible = "wm8988";
        reg = <0x1b>;
    };
};

&i2s {
    status = "okay";
    #sound-dai-cells = <0>;
};

&pcm {
    // status = "okay";
};

&uart {
    status = "okay";
};

/*
 * Audio:
 * Audio Multiplexer mit Audiokanal 4
 * I2C mit Wolfson WM8988
 */
/ {
    sound-my-wm8988 {
        compatible = "simple-audio-card";
        simple-audio-card,name = "Wolfson WM8988";
        simple-audio-card,format = "i2s";
        simple-audio-card,widgets =
            "Headphone", "Headphone Jack",
            "Speaker", "External Speaker";
        simple-audio-card,routing =
            "Headphone Jack", "LOUT1",
            "External Speaker", "LOUT2";

        simple-audio-card,cpu {
            sound-dai = <&i2s>;
            system-clock-frequency = <3072000>;
            bitclock-master;
            frame-master;
        };
        simple-audio-card,codec {
            sound-dai = <&wm8988 0x1b>;
            // sound-dai = <&wm8988 0>;
            system-clock-frequency  = <24000000>;
        };
    };
};
